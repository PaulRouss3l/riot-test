    "nodemon": "^2.0.22",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
